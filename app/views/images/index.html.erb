<% content_for(:title, "My Photos") %>

<div class="flex flex-col mx-auto" style="max-width: 1024px;">
  <div class="w-100% m-2 md:m-8">
    <%= render 'images/images', images: @images %>
  </div>

  <div id="add_images" class="m-2 md:m-8">
    <%= render "form", image: @image %>
  </div>
</div>

<%= link_to "Done", "refresh_historical_location",
    class: "hotwire-native:hidden",
    data: {
      controller: "bridge--button",
      bridge_position: "right",
      bridge_title: "Done",
      bridge_vibrate: true
    }
%>
