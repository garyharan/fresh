<%= turbo_frame_tag "images_form", data: { controller: 'photos' } do %>
  <%= form_with(model: Image.new, url: [@profile, Image.new], class: "block size-full rounded-lg") do |form| %>
    <% if @image&.errors&.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg">
        <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

        <ul>
          <% @image.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <label class="block text-sm min-h-full p-4 font-medium text-gray-900 " data-photos-target="uploadSection">

      <p class="text-2xl size-full min-h-24 rounded-lg border border-1 border-slate-300 dark:border-white text-center content-center bg-purple-300">+</p>

      <%= form.file_field :photo, multiple: true, data: { action: "change->photos#submit" }, class: "hidden" %>
    </label>

    <div class="inline hidden">
      <%= form.submit "Upload", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer", data: { "photos-target": "submitButton" } %>
    </div>
  <% end %>

  <img src="<%= asset_path 'pulse-multiple.svg' %>" class="w-8 h-8 mx-auto mt-10 hidden" data-photos-target="spinner" />
<% end %>
