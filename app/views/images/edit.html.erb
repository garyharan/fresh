<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing image</h1>

  <%= render "form", image: @image, profile: @profile %>

  <%= link_to "Show this image", profile_image_path(@profile, @image), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to images", profile_images_path(@profile), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
