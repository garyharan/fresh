<% if current_user.profile.liked_by?(@profile.user) %>

  <turbo-stream action="replace" target="recommendation_like_<%= @profile.id %>">
    <template>
      <%= turbo_frame_tag "recommendation_like_#{@profile.id}" do %>
        <%= render partial: 'recommendations/like', locals: { profile: @profile } %>
      <% end %>
    </template>
  </turbo-stream>

  <turbo-stream action="replace" target="recommendation_pass_<%= @profile.id %>">
    <template>
      <%= turbo_frame_tag "recommendation_pass_#{@profile.id}" do %>
        <%= render partial: 'recommendations/pass', locals: { profile: @profile } %>
      <% end %>
    </template>
  </turbo-stream>

<% else %>

  <turbo-stream action="replace" target="recommended_profile">
    <template>
      <%= turbo_frame_tag "recommended_profile", src: recommendations_path(group_id: @group.id) %>
    </template>
  </turbo-stream>

<% end %>
