<%= turbo_stream_from @room %>

<header class="block text-xs sm:text-md md:text-lg font-medium text-center text-gray-300 bg-black w-full">
  <div class="flex flex-wrap justify-between items-center w-full p-4">
    <%= link_to :back do %>
      <svg class="w-6 h-6 md:w-8 md:h-8 inline" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
    <% end %>
    <%= @room.name %>
  </div>
</header>
<main class="flex-1 overflow-y-auto overflow-x-clip w-full py-2">
  <%= render @room.messages %>
</main>
<footer class="block shadow p-2">
  <%= render 'messages/new', room: @room %>
</footer>
