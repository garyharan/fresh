<!DOCTYPE html><!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Settings" %></title>
    <%= render 'layouts/header' %>
  </head>

  <body class="text-slate-700 bg-slate-50" data-user-id="<%= authenticated? ? Current.user.id : -1 %>">

    <div class="flex flex-col">
      <%= render "shared/flashes" %>

      <main class="w-full">
        <% unless turbo_native? %>
          <%= render "shared/nav" if current_page?(settings_path) %>
          <%= render "settings/title" %>
        <% end %>

        <div class="m-2">
          <div class="flex mx-auto" style="max-width: 1024px;">
            <div class="md:mx-2 mx-auto w-full">
              <%= yield %>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
