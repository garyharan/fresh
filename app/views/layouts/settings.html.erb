<!DOCTYPE html><!DOCTYPE html>
<html>
  <head>
    <title>Fresh - Honest dating</title>
    <%= render 'layouts/header' %>
  </head>

  <body class="text-slate-700 bg-slate-50" data-user-id="<%= user_signed_in? ? current_user.id : -1 %>">

    <div class="flex flex-col">
      <%= render "shared/flashes" %>

      <main class="w-full">
        <%= render "shared/nav" %>

        <%= render "settings/title" %>

        <div class="m-2">
          <div class="flex mx-auto" style="max-width: 1024px;">
            <div class="md:mx-2 mx-auto flex flex-col md:flex-row w-full">
              <%= render "settings/nav" %>

              <div class="md:p-8 bg-white w-full p-2 min-h-fit rounded-lg border">
                <%= yield %>
              </div>
            </div>
          </div>
        </div>

      </main>
    </div>
  </body>
</html>
