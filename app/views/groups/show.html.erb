<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto flex flex-col">
    <div id="<%= dom_id group %>" class="my-10">
      <div class="flex flex-col md:flex-row bg-black rounded-lg p-4">
        <div class="bg-white p-2 mx-auto">
          <%= link_to public_group_url(group) do %>
            <%= raw RQRCode::QRCode.new(public_group_url(group)).as_svg module_size: 11, color: "white" %>
          <% end %>
        </div>
        <div class="p-6 flex flex-col justify-evenly text-white text-center">
          <div class="text-3xl font-bold text-center">
            <%= group.name %>
          </div>
          <% if group.description %>
            <div class="text-center mt-10">
              <div><%= group.description %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if @group.user == current_user %>
      <div>
        <h2 class="font-bold">Link to share with members</h2>

        <div class="flex flex-rows w-full" data-controller="clipboard">
          <div data-controller="clipboard" data-clipboard-success-content="Copied!" class="mt-1 flex rounded-md shadow-sm w-full">

            <%= text_field_tag "", public_group_url(@group), class: "py-3 px-2 outline-none flex-1 block rounded-none rounded-l-md sm:text-sm border border-gray-300", data: { 'clipboard-target': "source" } %>

            <%= link_to "#", class: "inline-flex w-3/12 items-center px-3 focus:outline-none rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 text-sm", data: { action: "click -> clipboard#copy" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0118 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3l1.5 1.5 3-3.75"></path>
              </svg>
              <span data-clipboard-target="tag">Copy to clipboard</span>
            <% end %>

          </div>
      </div>

      <div class="">
        <h2 class="mt-10 font-bold">Manage this event</h2>
        <%= link_to edit_group_path(@group), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
          <svg class="w-3 h-3 md:w-6 md:h-6 inline" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
          Edit this group
        <% end %>

        <div class="inline-block ml-2">
          <%= link_to(@group, method: :delete, data: { method: :delete, confirm: "Are you sure?" }, class: "text-xs pr-6 md:text-md text-red-700 font-bold hover:text-red-500 hover:underline whitespace-nowrap") do %>
            <svg class="w-3 h-3 md:w-6 md:h-6 inline" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path></svg> Delete this group
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="font-bold text-xl">
        Scan this QR code with your phone camera to start matching with people in this group.
      </p>
    <% end %>
  </div>
</div>
