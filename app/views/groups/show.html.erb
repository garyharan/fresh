<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto flex flex-col">
    <%= render @group %>

    <div>
      <%= link_to "Match with people from this group now", "#", class: "inline-flex items-center justify-center px-4 py-2.5 text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900" %>
    </div>

    <% if @group.user == current_user %>
      <div class="">
        <h2 class="mt-10 font-bold">Manage this event</h2>
        <%= link_to edit_group_path(@group), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
          <svg class="w-3 h-3 md:w-6 md:h-6 inline" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
          Edit this group
        <% end %>

        <div class="inline-block ml-2">
          <%= link_to(@group, method: :delete, data: { method: :delete, confirm: "Are you sure?" }, class: "text-xs pr-6 md:text-md text-red-700 font-bold hover:text-red-500 hover:underline whitespace-nowrap") do %>
            <svg class="w-3 h-3 md:w-6 md:h-6 inline" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path></svg> Delete this group
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
