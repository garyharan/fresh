<div class="m-2 mb-4">
  <%= form_with(model: @card, class: "pb-8", data: { controller: 'card' }) do |form| %>
    <%= form.hidden_field :kind, data: { card_target: 'kind' } %>

      <div class="rounded bg-slate-100 border border-slate-200">
        <div class="flex flex-row border-b border-white">
          <div class="grow p-2">
            <div class="text-xl font-bold uppercase text-gray-400">

              Select a prompt:

            </div>
            <div class="text-xl font-bold">

              <% cards_select_options(card.kind).each do |label, value| %>
                <div class="py-2 flex justify-between items-center">
                  <div><%= form.label :title, label, for: "card_title_#{value}" %></div>
                  <div><%= form.radio_button :title, value, id: "card_title_#{value}", data: { card_target: 'title' } %></div>
                </div>
              <% end %>

            </div>
          </div>
          <div class="shrink flex items-center pr-4">
          </div>
        </div>
        <div class="p-4">
          <%= form.text_area :content, rows: 5, placeholder: "Write something...", data: { card_target: 'content' }, class: "block w-full px-2 text-md text-gray-800 bg-white border-0 border-transparent focus:border-transparent focus:ring-0 focus:ring-0 bg-white", required: true %>
        </div>
      </div>

      <div class="w-full flex pt-2 pb-4">
        <% if card.kind != :about_me %>
        <div class="flex w-1/2 justify-center items-center">
          <%= link_to("Remove #{card.kind.to_s.titleize}", card, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }) %>
        </div>
        <% end %>

        <div class="flex w-1/2 justify-center items-center">
        <%= form.submit class: "text-lg rounded-md py-2 px-4 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
        </div>
      </div>
  <% end %>
</div>
