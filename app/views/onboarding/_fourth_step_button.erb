<%= turbo_frame_tag "onboarding_fourth_step_button" do %>
  <% if @images.any? %>
    <div class="grid justify-items-stretch">
      <div class="w-fit justify-self-center mr-4 mt-10">
        <%= form_with url: onboarding_four_path, method: :get, data: { turbo_action: "replace" }, class: "justify-self-end" do %>
          <%= submit_tag "Next", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-64 px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800", data: {
            controller: "bridge--button",
            bridge_position: "right",
            bridge_title: "Next",
            bridge_vibrate: true
          } %>
        <% end %>
      </div>
    </div>
  <% else %>
    <button class="hidden" data-controller="bridge--button" bridge_title="" ></button>

    <%= render 'shared/contextual_help', message: t('images_upload_at_least_one_to_finish') %>

  <% end %>
<% end %>
