<% content_for(:title, "Tell us about you") %>

<%= form_with(model: @profile, url: onboarding_update_one_path, class: "w-full px-4", data: { "turbo-action": "replace" }) do |form| %>
  <%= render 'shared/form_errors_notice', record: @profile %>

  <%= render 'profiles/form_section_1', form: form %>

  <%= form.submit "Next", class: "w-full p-4 mt-10 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800", data: {
    controller: "bridge--button",
    bridge_position: "right",
    bridge_title: "Next",
    bridge_vibrate: true
  } %>

<% end %>
