<%= turbo_frame_tag "onboarding_fifth_step_button" do %>

  <% if @profile.cards.any? %>

    <div class="grid justify-items-stretch">
      <div class="w-fit justify-self-center mr-4 mt-10">
        <%= button_to t('onboarding.finish'), onboarding_finish_path, method: :get, class: "justify-self-end text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-64 px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800", data: {
            turbo: false,
            controller: "bridge--button",
            bridge_position: "right",
            bridge_title: t('onboarding.finish'),
            bridge_vibrate: true
          } %>
      </div>
    </div>

  <% else %>
    <button class="hidden" data-controller="bridge--button" bridge_title="" ></button>

    <%= render 'shared/contextual_help', message: t('fill_first_card_to_finish') %>

  <% end %>

<% end %>
