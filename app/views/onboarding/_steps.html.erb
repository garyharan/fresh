  <div>
    <h2 class="sr-only">Steps</h2>

    <div class="relative after:absolute after:inset-x-0 after:top-1/2 after:block after:h-0.5 after:-translate-y-1/2 after:rounded-lg after:bg-gray-100" >
      <ol class="relative z-10 flex justify-center text-sm font-medium text-gray-500">
        <% [onboarding_one_url, onboarding_two_url, onboarding_three_url, onboarding_four_url].each_with_index do |step, index| %>
          <li class="flex items-center bg-white p-2">
            <span class="h-6 w-6 rounded-full text-center text-[10px] font-bold leading-6 <%= step == request.url || @profile.step == (index + 1) ? 'bg-blue-600 text-white' : 'bg-gray-100' %>">
              <%= index + 1 %>
            </span>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
