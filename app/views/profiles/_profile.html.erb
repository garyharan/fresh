<div id="<%= dom_id profile %>">
  <h1><%= profile.display_name %></h1>

  <p class="my-5">
    <%= profile.body %>
  </p>

  <p class="my-5">
    <% profile.images.each do |image| %>
      <%= image_tag image.variant(:thumb) %>
    <% end %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Born:</strong>
    <%= profile.born %>
  </p>

  <%= link_to("Show this profile", profile, class: "rounded-lg py-2 px-2 bg-blue-200 text-slate-700 inline-block font-medium text-sm") if action_name != "show" %>
  <%= link_to 'Edit this profile', edit_profile_path(profile), class: "rounded-lg py-2 ml-2 px-2 text-slate-700 bg-blue-200 inline-block font-medium text-sm" %>
  <hr class="mt-6">
</div>
