<% Card::KINDS.keys.each do |kind| %>
  <% if card = profile.cards.find { |card| card.kind.to_sym == kind.to_sym } %>
    <div class="mx-4 mb-4">
      <div class="text-xl font-bold uppercase text-gray-400 hidden"><%= kind.to_s.titleize %></div>
      <div class="grow text-xl font-bold"><%= t(card.title) %></div>
      <p class="text-gray-700 text-lg"><%= card.content %></p>
    </div>
  <% end %>
<% end %>
