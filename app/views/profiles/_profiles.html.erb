<div class="grid grid-cols-3">
  <% @profiles.each do |profile| %>
    <div class="gap-4 lg:gap-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <div class="text-center text-gray-500 dark:text-gray-400 mb-6">
        <%= link_to profile do %>
          <% if profile.images.any? && profile.images.first.photo.attached? %>
            <%= image_tag(profile.images.first.photo.variant(:thumb), class: "mx-auto w-20 h-20 rounded-full", alt: profile.display_name) %>
          <% else %>
            <div class="text-center text-gray-500 text-5xl pt-6 inline-block" style="height: 100px; width: 100px;">
              <p class="inline-block align-middle leading-10">ðŸ‘¤</p>
            </div>
          <% end %>
        <% end %>
          <h3 class="mb-1 font-bold tracking-tight text-gray-900 dark:text-white">
            <%= link_to profile.display_name, profile %>
          </h3>
          <p class="text-sm">
            <%= age(profile.born_on) %> years old <%= profile.gender.label unless profile.gender.blank? %>
          </p>
          <p>
            <% if profile.respond_to?(:distance) %>
              <%= profile.distance %>km away
            <% end %>
            <% if profile.respond_to?(:height_difference) %>
              <%= profile.height_difference %>cm height difference
            <% end %>
          </p>
      </div>
    </div>
  <% end %>
</div>
