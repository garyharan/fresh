<div class="mx-0 w-full px-10 py-3">
  <div class="grid grid-cols-2 gap-2 md:grid-cols-1">
    <% profile.images.drop(1).each_with_index do |image, index| %>
      <div class="">
        <% if hotwire_native? && controller_name == "profile" %>
          <%= link_to profile_images_path(@profile) do %>
            <% image_tag image.photo.variant(:medium), class: "rounded-lg shadow cursor-zoom-in" %>
          <% end %>
        <% else %>
          <%= image_tag image.photo.variant(:medium), class: "rounded-lg shadow cursor-zoom-in", index: (index + 1)  %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
